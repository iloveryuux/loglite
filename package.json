{
  "name": "@ryuux/loglite",
  "version": "1.0.0",
  "description": "extremely efficient and customizable logger",
  "main": "dist/index.js",
  "type": "module",
  "files": [
    "dist/**/*"
  ],
  "packageManager": "pnpm@9.6.0",
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "format": "biome format --write",
    "format:check": "biome format",
    "lint": "biome lint --fix",
    "lint:check": "biome lint",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "iloveryuux-tools",
    "logger",
    "customizable"
  ],
  "author": "Ryo",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@ryuux/config": "^1.0.2",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "dependencies": {
    "chalk": "^5.3.0"
  }
}
